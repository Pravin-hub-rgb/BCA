# .github/workflows/update-github-data.yml
name: Update Git Data

on:
  schedule:
    - cron: '0 * * * *'  # Runs every hour
  workflow_dispatch:  # Allow manual triggering
  push:
    branches: [ master ]  # Also run on pushes to capture new commits quickly

jobs:
  update-data:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        token: ${{ secrets.GITHUB_TOKEN }}
        fetch-depth: 0  # Fetch full history for accurate commit count

    - name: Create data directory
      run: |
        mkdir -p public/git-data
        echo "ğŸ“ Created data directory"

    - name: Get repository data
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      run: |
        set -e  # Exit on any error
        
        echo "ğŸ” Fetching repository data..."
        
        # Get total commit count using git (more accurate)
        echo "ğŸ“Š Getting total commit count..."
        TOTAL_COMMITS=$(git rev-list --all --count)
        echo "$TOTAL_COMMITS" > public/git-data/total-commits.txt
        echo "âœ… Total commits: $TOTAL_COMMITS"
        
        # Get recent commits (fetch 25 to account for automated commits)
        echo "ğŸ“ Fetching recent commits (25 commits)..."
        for i in {1..3}; do
          if curl -s -f \
            -H "Authorization: token $GITHUB_TOKEN" \
            -H "Accept: application/vnd.github.v3+json" \
            "https://api.github.com/repos/${{ github.repository }}/commits?per_page=25" \
            > public/git-data/recent-commits.json; then
            echo "âœ… Recent commits fetched successfully"
            break
          else
            echo "âŒ Attempt $i failed, retrying..."
            sleep 5
          fi
        done
        
        # Verify the commits were fetched and validate JSON
        if ! jq empty public/git-data/recent-commits.json 2>/dev/null; then
          echo "âŒ Invalid JSON in recent-commits.json"
          exit 1
        fi
        
        COMMIT_COUNT=$(jq length public/git-data/recent-commits.json)
        echo "âœ… Fetched $COMMIT_COUNT commits"
        
        # Get last updated timestamp (most recent commit date)
        echo "ğŸ• Getting last updated timestamp..."
        LAST_COMMIT_DATE=$(git log -1 --format="%aI")
        echo "$LAST_COMMIT_DATE" > public/git-data/last-updated.txt
        echo "âœ… Last commit date: $LAST_COMMIT_DATE"
        
        # Add a generation timestamp for debugging
        date -u +"%Y-%m-%dT%H:%M:%SZ" > public/git-data/generated-at.txt
        echo "âœ… Generated at: $(cat public/git-data/generated-at.txt)"

    - name: Validate and debug generated files
      run: |
        echo "ğŸ” Validating generated files..."
        
        # Check if all files exist and are not empty
        for file in recent-commits.json total-commits.txt last-updated.txt; do
          if [[ ! -s "public/git-data/$file" ]]; then
            echo "âŒ File $file is missing or empty"
            exit 1
          else
            echo "âœ… File $file exists and has content"
          fi
        done
        
        echo ""
        echo "=== DEBUGGING INFO ==="
        echo "ğŸ“ Files in git-data directory:"
        ls -la public/git-data/
        
        echo ""
        echo "ğŸ“Š Total commits: $(cat public/git-data/total-commits.txt)"
        echo "ğŸ• Last updated: $(cat public/git-data/last-updated.txt)"
        echo "âš¡ Generated at: $(cat public/git-data/generated-at.txt)"
        
        echo ""
        echo "ğŸ“ Recent commits summary (first 10):"
        jq -r '.[] | "\(.commit.message | split("\n")[0]) - \(.author.login // "unknown")"' \
          public/git-data/recent-commits.json | head -10
        
        echo ""
        echo "ğŸ” Development vs Automated commit analysis:"
        DEV_COMMITS=$(jq -r '.[] | select(.commit.message | test("ğŸ¤–|\\[skip ci\\]|Update commit data"; "i") | not) | .commit.message | split("\n")[0]' public/git-data/recent-commits.json | wc -l)
        AUTO_COMMITS=$(jq -r '.[] | select(.commit.message | test("ğŸ¤–|\\[skip ci\\]|Update commit data"; "i")) | .commit.message | split("\n")[0]' public/git-data/recent-commits.json | wc -l)
        echo "   Development commits found: $DEV_COMMITS"
        echo "   Automated commits found: $AUTO_COMMITS"
        
        if [ "$DEV_COMMITS" -gt 0 ]; then
          echo ""
          echo "ğŸ¯ Development commits:"
          jq -r '.[] | select(.commit.message | test("ğŸ¤–|\\[skip ci\\]|Update commit data"; "i") | not) | "   - \(.commit.message | split("\n")[0])"' \
            public/git-data/recent-commits.json | head -5
        fi

    - name: Commit and push changes
      run: |
        git config --local user.email "41898282+github-actions[bot]@users.noreply.github.com"
        git config --local user.name "GitHub Actions Bot"
        
        # Check if there are changes to commit
        if git diff --quiet public/git-data/; then
          echo "ğŸ“ No changes detected in git data files"
          exit 0
        fi
        
        echo "ğŸ“ Changes detected, committing..."
        git add public/git-data/
        git commit -m "ğŸ¤– Update commit data - $(date -u +'%Y-%m-%d %H:%M UTC') [skip ci]"
        
        # Push with retry logic
        for i in {1..3}; do
          if git push; then
            echo "âœ… Changes pushed successfully"
            break
          else
            echo "âŒ Push attempt $i failed, retrying..."
            sleep 5
          fi
        done

    - name: Final summary
      run: |
        echo ""
        echo "ğŸ‰ === WORKFLOW COMPLETED SUCCESSFULLY ==="
        echo "ğŸ“Š Total commits: $(cat public/git-data/total-commits.txt)"
        echo "ğŸ• Last updated: $(cat public/git-data/last-updated.txt)"
        echo "ğŸ“ Recent commits fetched: $(jq length public/git-data/recent-commits.json)"
        echo "âš¡ Data generated at: $(cat public/git-data/generated-at.txt)"
        echo ""
        echo "ğŸ”— Your website should now show the updated commit information!"